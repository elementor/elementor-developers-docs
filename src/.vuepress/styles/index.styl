/**
 * Custom Styles here.
 *
 * ref: https://v1.vuepress.vuejs.org/config/#index-styl
 */

body
  font-family "DM Sans"

h1
h2
h3
h4
h5
h6
	font-family "Ivar Text"

.page-edit
  clear both

.navbar
.sidebar
.page-edit
.page-nav
.header-anchor
.badge
  user-select none

a.sidebar-link:hover
a.sidebar-link.active
  background-color #fdf6f8

.theme-default-content
  code
    .token
      &.deleted
        color #EC5975
      &.inserted
        color #4b4

// Header

#app .navbar .logo
  margin-right 5px



// Navigation

#app
  .repo-link
    display none

  .nav-item > a.external > span
    display none

@media (min-width: 719px)

  #app
    .navbar
      display flex
      align-items center
      height 70px

    .navbar .links
      position unset
      padding-left 2.325rem

      .search-box
          order 2
          margin-right 0
          margin-left 1rem

    .nav-item > a:not(.external):hover
    .nav-item > a:not(.external).router-link-active
      border-bottom 0

    .nav-dropdown
      background #FFF
      padding 32px 0
      border 1px solid #000
      border-radius 16px
      box-shadow 3px 4px 0px #000
      right unset

      .dropdown-item
        padding 0 32px

        &:not(:first-of-type)
          padding-top 16px

        h4
          padding 0
          font-size 1.125rem
          line-height 2rem

        a
          display flex
          justify-content space-between
          align-items center
          padding 0
          font-size 0.875rem
          font-weight 500
          line-height 1.5rem
          color #000

          &::after
            content " "
            display inline-block
            margin-left 64px
            background-image url(/docs/assets/img/home/arrow-right.svg)
            background-position center center
            background-size contain
            background-repeat no-repeat
            width 18px
            height 24px
            color #ff3700
            transition-duration 0.3s

          &::before
            content ' '
            position absolute
            left 0
            bottom 0
            width 0%
            height 2px
            opacity 0
            background #000
            transition all 0.3s

          &:hover
          &:focus
            color currentColor

            &::after
              transform translateX(8px)

            &::before
              opacity 1
              width 100%

    .dropdown-wrapper .nav-dropdown .dropdown-item a.router-link-active

      &::after
        padding 0
        margin 0
        border 0
        position unset

    .dropdown-wrapper .dropdown-title,
    .dropdown-wrapper .mobile-dropdown-title
      color #000

@media (max-width: 720px)

  #app
    .sidebar .nav-links .nav-item,
    .dropdown-wrapper .mobile-dropdown-title .title
    .sidebar .nav-links .repo-link
      font-weight 600
      font-size 16.5px
      line-height 25px
      font-style normal
      font-variant-caps normal
      font-variant-east-asian normal
      font-variant-ligatures normal
      font-variant-numeric normal

    .sidebar .nav-links .nav-item
    .sidebar .nav-links .repo-link
      padding-top 8px
      padding-bottom 8px



// Home

div.docs-home
  main
    padding-bottom 0

    .content__default
      padding-left 0
      padding-right 0
      padding-top 0

    div.content__default
    footer.page-edit
    div.page-nav
      max-width 100%

    footer.page-edit
    .last-updated
      display none

    a
      cursor pointer

    #home-hero
      background-color #FFF1E8
      color #000
      text-align center
      padding 80px 1.5rem

      h1
        font-weight 600
        font-size 48px
        line-height 1
        margin 0
        border 0

      p
        font-size 18px
        line-height 1.5
        border 0
        max-width 740px
        margin 1rem auto 2rem

    .home-content
      background-color #fff
      color #000
      max-width 800px
      padding 80px 1.5rem
      margin 0 auto
      display grid
      grid-template-columns 2fr 1fr
      gap 3rem
      align-items end

      h2
        font-weight bold
        font-size 36px
        line-height 1
        margin 0
        border 0

/* Tablet */

@media (max-width: 720px)
  div.docs-home main

    .content__default
      padding-left 0
      padding-right 0
      padding-top 0

    #home-hero
      padding 64px 1.5rem

      h1
        font-size 40px

    .home-content
      padding 64px 1.5rem
      grid-template-columns 2fr 1fr
      gap 2rem

      h2
        font-size 28px
        margin 0 0 40px

/* Mobile */

@media (max-width: 360px)
  div.docs-home main

    #home-hero
      padding 32px 1.5rem

    .home-content
      padding 32px 1.5rem
      grid-template-columns 1fr
      gap 1rem

